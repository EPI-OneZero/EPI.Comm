<Window x:Class="CommSample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CommSample"
        mc:Ignorable="d"
        Title="MainWindow" Height="auto" Width="300">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Height" Value="50"/>
            <Setter Property="Width" Value="100"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
    </Window.Resources>
    <StackPanel Orientation="Vertical" Margin="5">
        <Button Content="Server" Click="OpenServerWindow"/>
        <Button Content="Client" Click="OpenClientWindow"/>
        <Button Content="ClientHeader" Click="OpenClientHeaderWindow"/>
    </StackPanel>
</Window>
