<Window x:Class="CommSample.Sample.ClientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CommSample.Sample"
        mc:Ignorable="d"
        Title="ClientWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="auto"/>

        </Grid.ColumnDefinitions>
        <TextBox Grid.Column="0" x:Name="text" Background="AliceBlue" AcceptsReturn="True" AcceptsTab="True"  />
        <TextBlock Grid.Column="1" x:Name="recv" Background="AliceBlue" ScrollViewer.VerticalScrollBarVisibility="Auto" />
    
        <StackPanel Grid.Column="2" Margin="5">
            <Button Width="100" Height="50" Content="Start" Click="Start"/>
            <Button Width="100" Height="50" Content="Stop" Click="Stop"/>
            <Button Width="100" Height="50" Content="Clear" Click="Clear"/>
            <Button Width="100" Height="50" Content="Send" Click="Send"/>
        </StackPanel>
            
    </Grid>
</Window>
